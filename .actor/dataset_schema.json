                    "type": "object",
                        "properties": {
                            "minSalary": {
                                "type": "string",
                                "nullable": true
                            },
                            "maxSalary": {
                                "type": "string",
                                "nullable": true
                            },
                            "currency": {
                                "type": "string",
                                "nullable": true
                            },
                            "period": {
                                "type": "string",
                                "nullable": true
