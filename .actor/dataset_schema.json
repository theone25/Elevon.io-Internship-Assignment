            "seniority": {
                "type": "string",
                "nullable": true
            },
            "tags_skills": {
                "type": "string",
                "nullable": true
            },
            "postedAt": {
                "type": "string"
            },
            "jobId": {
                "type": "string"
            },
            "jobUrl": {
                "type": "string"
            },
            "companyUrl": {
                "type": "string"
            },
            "description": {
                "type": "string"
            }
        },
        "required": ["jobTitle","companyName", "location", "salary", "employmentType", "seniority", "tags_skills", "postedAt", "jobId", "jobUrl", "companyUrl", "description"]
    },
    "views": {}
